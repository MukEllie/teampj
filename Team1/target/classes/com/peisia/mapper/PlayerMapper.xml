<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.peisia.mapper.PlayerMapper">

    <select id="getPlayerById" parameterType="int" resultType="com.peisia.dto.PlayerDto">
    SELECT * FROM player_status WHERE p_id = #{p_id}
	</select>

    <update id="updatePlayer" parameterType="com.peisia.dto.PlayerDto">
        UPDATE player_status SET
            p_currenthp = #{p_currenthp},
            p_atk = #{p_atk},
            p_luck = #{p_luck}
        WHERE p_id = #{p_id}
    </update>

</mapper>